<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">?attr/colorAccent1</item>
        <item name="colorAccent1">@color/colorSecondary</item>
        <item name="colorAccent2">@color/colorTertiary</item>
        <item name="colorAccent3">@color/colorQuaternary</item>
        <item name="colorTag">@color/colorTag</item>
        <item name="android:fontFamily">@font/fira_sans_condensed</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Main">
        <item name="colorControlNormal">@color/colorControlNormal</item>
    </style>


    <style name="AppTheme.SectionTitle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Numerical" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.OnPrimary">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="AppTheme.NoActionBar.Transparent">
        <item name="android:statusBarColor">@color/colorTransparent</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.Transparent.Transition">
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>

</resources>
